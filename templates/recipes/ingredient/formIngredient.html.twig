{% extends "layout/base.html.twig" %}

{% block content %}
    <div class="container">
        <div class="jumbotron">
            <h1 class="display-4 text-center">Receta por ingredientes</h1>
            <p class="lead text-center">Introduzca los ingredientes separados por comas (ajo,cebolla,tomate)</p>
            <hr class="my-4">
            <p class="text-center">Introducir los ingredientes</p>
            <div class="lead center col-lg-8 offset-lg-2">
            <form action="/recipes/ingredients" method="post">
                <div class="form-group">
                    <label for="ingredientes">Ingredientes</label>
                    <input type="text" class="form-control" name="ingredients" required=true placeholder="Introducir ingredientes">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Consultar recetas</button>
                </div>
            </form>
            </div>
        </div>
    </div>
{% endblock %}